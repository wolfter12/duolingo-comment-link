{
  "manifest_version": 2,
  "name": "Duolingo Comment Link",
  "version": "1.0.0",
  "description": "Provides ability to get a direct link to the comment",
  "permissions": [
    "webNavigation",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://forum.duolingo.com/comment/*",
        "https://forum.duolingo.com/comment/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "96": "icons/icon_48.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png",
    "512": "icons/icon_256.png"
  },
  "web_accessible_resources": [
    "icons/link_1_128.png",
    "icons/link_2_128.png"
  ]
}