{
    "env": {
        "browser": true,
        "es2020": true,
        "webextensions": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "quotes": [
            2,
            "double",
            "avoid-escape"
        ],
        "comma-dangle": 1,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    }
}